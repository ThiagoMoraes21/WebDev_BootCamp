<% include partials/header %>
  <div class="ui main text container segment">
    <div class="ui huge header">
      Edit "<%= blog.title %>"
    </div>
    <form class="ui form" action="/blogs/<%= blog._id %>?_method=PUT" method="post">
      <div class="field">
        <label>Title</label>
        <input type="text" name="blog[title]" value="<%= blog.title %>" required>
      </div>
      <div class="field">
        <label>Image url</label>
        <input type="text" name="blog[image]" value="<%= blog.image %>">
      </div>
      <div class="field">
        <label>Content</label>
        <textarea name="blog[body]" rows="8" cols="80" required>
          <%= blog.body %>
        </textarea>
      </div>
      <input type="submit" class="fluid large ui black button center" value="Update">
    </form>
  </div>
<% include partials/footer %>
